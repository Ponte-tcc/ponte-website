<!DOCTYPE html>

<html lang="pt-br">
  

  <%- include('parts/head', { title : 'Cadastro', linkCss :
  '/css/cadastro.css'} ) %>

  

  <body>
    

    <%- include('parts/header', { title : 'Cadastro'}) %>
    

    <div class="container cadastro">
      <div class="contentCad">
        <h1>Conheça novas pessoas</h1>
        <p>Estrele novas ideias!</p>
      </div>

      <div class="box">
        <h1>Cadastro</h1>
        
        <div class="erros">

            <% if(erros.length > 1){%> <a>* Preencha todos os campos</a> <%}
            else if(erros.length == 1){erros.forEach(erro => { %><a>* <%= erro.txt %></a><% })} %>
            
            <% errosPass.forEach(erro => { %><a>* <%= erro.txt %></a><% }) %>
            
            <% errosUser.forEach(erro => { %><a>* <%= erro.txt %></a><% }) %>
            
            <% errosEx.forEach(erro => { %><a>* <%= erro.txt %></a><% }) %>
           
            <% errosEmail.forEach(erro => { %><a>* <%= erro.txt %></a><% }) %>
            </div>

        <form class="box-cad" method="post" >
          

          <div class="inputPart">
            
            
              <div >
                <input
                  type="text"
                  name="user"
                  id="user-cad"
                  placeholder="User"
                />
                
                 </div>
              

              <div>
                <input
                  type="text"
                  name="exibition"
                  id="exibition-cad"
                  placeholder="Nome de exibição"
                />
                
</div>
              
<div>
                <input
                  type="text"
                  name="email"
                  id="email-cad"
                  placeholder="Email"
                />
                
            
</div>
            
                <div>
                <input
                  type="password"
                  name="password"
                  id="senha-cad"
                  placeholder="Senha"
                />
                
              </div>
              </div>
              <button id="submit"><img src="img/check.png" ></button>
            </div>

          
          
          
        </form>
        <a href="/" id="login-btn">Se já tem um login, Logar-se</a>

       
          
        
      </div>
    </div>

   
</div>
    
  </body>

  <script src="https://www.gstatic.com/firebasejs/5.8.5/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/5.8.5/firebase-auth.js"></script>
  <script src="/script/app.js"></script>
  <script src="/script/authentication.js"></script>
</html>
