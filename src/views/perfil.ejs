<!DOCTYPE html>

<html lang="pt-br">

  <%- include('parts/head', { title : 'Perfil', linkCss :
  '/css/perfil.css'} ) %>

  <body>
    
    <%- include('parts/header', { title : ''}) %>
    
    <div class="container perfil">
      <div id="content">
  
<% if(sessionID === 'NOT'){%>
        
  
    <div class="nome">
      <h3>Nome: <%= perfilEx %>  </h3>
       
    </div>
    <div class="user">
      <h3>User: <%= perfilUser %>  </h3>
      
    </div>
  
<div class="publicados">


<%pubs.forEach(pub => {%>

<div class="publica">
  <%= pub.userEx %> 
  <small><%= pub.userUser %></small>
  <%= pub.conteudo %>
  <% var monthNames = [
'Janeiro', 'Fevereiro', 'Março',
'Abril', 'Maio', 'Junho', 'Julho',
'Agosto', 'Setembro', 'Outubro',
'Novembro', 'Dezembro'
];
var d = pub.createdAt.getDate();
var m = monthNames[pub.createdAt.getMonth()];
var y = pub.createdAt.getFullYear();
var h = pub.createdAt.getHours()
var mi = pub.createdAt.getMinutes()%>
<small><%= d + ' ' +m + ' ' +y + ' ás: '+ h + ':'+ mi%></small>
<hr>
         
</div>
<%}) %> 

</div>
        
          
<%}else{%>

            <div class="container-right">
              <div class="nome">
                <h3>Nome: <%= userEx %>  </h3>
                 <button>Mudar Nome</button>
              </div>
              <div class="user">
                <h3>User: <%= userUser %>  </h3>
                
              </div>
              <div class="email">
                <h3>E-mail: <%= userEmail %>  </h3>
                
              </div>
            </div>
        <div class="publicados">


  <%pubs.forEach(pub => {
    if(pub.idUser == sessionID){%>
    <div class="publica">
            <%= pub.userEx %> 
            <small><%= pub.userUser %></small>
            <%= pub.conteudo %>
            <% var monthNames = [
      'Janeiro', 'Fevereiro', 'Março',
      'Abril', 'Maio', 'Junho', 'Julho',
      'Agosto', 'Setembro', 'Outubro',
      'Novembro', 'Dezembro'
   ];
 var d = pub.createdAt.getDate();
 var m = monthNames[pub.createdAt.getMonth()];
 var y = pub.createdAt.getFullYear();
 var h = pub.createdAt.getHours()
 var mi = pub.createdAt.getMinutes()%>
 <small><%= d + ' ' +m + ' ' +y + ' ás: '+ h + ':'+ mi%></small>
<input type="hidden" name='pubId' value="<%=pub._id%>">
 
<form action="/deletar/<%=pub._id%>" method="post">
    <button type="submit">Deletar</button>
        
    </form> 
<%}%>  
<div class="hr"></div>        
          </div>
          <%}) %> 

        </div>
        
<%} %> 
      </div>
    </div>

    <%- include ('parts/page-footer') %>
  </body>
</html>
